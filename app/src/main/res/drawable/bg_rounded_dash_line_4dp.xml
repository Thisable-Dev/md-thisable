<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-1dp"
        android:left="-1dp"
        android:right="-1dp"
        android:top="-1dp">

        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/dimen_2dp"
                android:color="@color/colorGreyDivider"
                android:dashGap="@dimen/dimen_5dp"
                android:dashWidth="@dimen/dimen_4dp" />

            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/dimen_4dp" />
        </shape>
    </item>
</layer-list>