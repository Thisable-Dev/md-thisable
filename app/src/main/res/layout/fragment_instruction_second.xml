<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgIllustration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/illustration1" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_for_all_disabilities"
        android:layout_marginTop="@dimen/dimen_16dp"
        style="@style/TextContent.Title"/>

    <TextView
        android:id="@+id/tvSubTitle"
        android:text="@string/label_talkback_need_to_activate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginHorizontal="@dimen/dimen_40dp"
        android:textAlignment="center"
        style="@style/TextContent.SubTitle" />

    <TextView
        android:id="@+id/btnTxTalkback"
        android:text="@string/label_activate_talkback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginHorizontal="@dimen/dimen_40dp"
        android:textAlignment="center"
        style="@style/TextContent.SubTitle" />

    <LinearLayout
        android:id="@+id/layoutIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_32dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnCircle1"
            android:layout_width="@dimen/dimen_10dp"
            android:layout_height="@dimen/dimen_10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/bg_circle"
            app:tint="@color/colorGrey" />

        <ImageButton
            android:layout_width="@dimen/dimen_10dp"
            android:layout_height="@dimen/dimen_10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/bg_circle"
            android:layout_marginStart="@dimen/dimen_8dp"
            app:tint="@color/colorBlue"/>

    </LinearLayout>

</LinearLayout>