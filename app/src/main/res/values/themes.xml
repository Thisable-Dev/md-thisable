<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Thisable" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryVariant">@color/colorBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/jakarta_sans</item>
    </style>

    <style name="SplashTheme" parent="Theme.Thisable">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--  Button Style  -->
    <style name="ButtonContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/jakarta_sans_bold</item>
    </style>

    <!--  Text Style  -->
    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/jakarta_sans</item>
    </style>

    <style name="TextContent.SemiBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/jakarta_sans_semibold</item>
    </style>

    <style name="TextContent.Header2">
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextContent.Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/jakarta_sans_bold</item>
    </style>

    <style name="TextContent.Body3">
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextContent.Bold.Header2">
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextContent.Bold.Header3">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextContent.Header5">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextContent.Bold.Header5">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextContent.Bold.Header5.Blue">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/colorBlue</item>
    </style>

    <style name="TextContent.Header5.Grey">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="TextContent.Bold.Header5.White">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextContent.Title" parent="TextContent.Bold">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextContent.TitleToolbar" parent="TextContent.Bold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
    </style>

    <style name="TextContent.SubTitle" parent="TextContent">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextContent.Bold.Hyperlink" parent="TextContent.Bold">
        <item name="android:textSize">@dimen/dimen_12sp</item>
        <item name="android:textColor">@color/colorBlue</item>
    </style>

    <style name="TextContent.Header" parent="TextContent.SemiBold">
        <item name="android:textSize">@dimen/dimen_24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextContent.SubHeader" parent="TextContent.SemiBold">
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <style name="TextContent.EditTextStyle" parent="TextContent.SemiBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
    </style>

    <style name="TextContent.Small" parent="TextContent">
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextContent.SmallBold" parent="TextContent.Bold">
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextContent.SmallBoldBlue" parent="TextContent.Bold">
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:textColor">@color/colorBlue</item>
    </style>

    <style name="TextContent.Grey">
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="TediButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@null</item>
        <item name="rippleColor">#40FFFFFF</item>
        <item name="cornerRadius">@dimen/dimen_10dp</item>
    </style>

    <style name="TediButton.White">
        <item name="android:textAppearance">@style/TextContent.Bold.Header5.White</item>
    </style>

    <style name="TeDiButtonOutline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@null</item>
        <item name="cornerRadius">@dimen/dimen_10dp</item>
        <item name="rippleColor">#40FFFFFF</item>
    </style>

    <style name="TeDiButtonOutline.StrokeBlue">
        <item name="strokeColor">@color/colorBlue</item>
        <item name="android:textAppearance">@style/TextContent.Bold.Header5.Blue</item>
    </style>

    <!--  Dialog Style  -->
    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>